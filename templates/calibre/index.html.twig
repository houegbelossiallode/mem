{% extends 'template.html.twig' %}

{% block title %}Calibre{% endblock %}
{% block pagetitle %}Listes des calibres{% endblock %}
{% block body %}

<div class="container-fluid" >
<div class="card shadow mb-4">
    <div class="card-header py-3">
<div class="card-body table-responsive">
<div class="container" >

     <div class="row">
     <table class="table table-bordered table-striped table-highlight">
    <a href="{{ path('app_calibre_new') }}" class="btn btn-success mb-3">Nouveau calibre<i class="bi bi-plus"></i></a>
        <thead>
            <tr>
                
                <th>Calibre</th>
                <th>Proteine</th>
                <th>MODIFIER</th>
                <th>SUPPRIMER</th>
            </tr>
        </thead>
        <tbody>
        {% for calibre in calibres %}
            <tr>
                
                <td>{{ calibre.masse}}</td>
                <td>{{ calibre.proteine}}</td>
                
                <td class="text text-center">
                 <a href="{{ path('app_calibre_edit', {'id': calibre.id}) }}" class="btn btn-sm btn-outline-success" ><i class="bi bi-pencil text-success ml-5"></i></a>
                </td>

                   <td class="text text-center"><a href="{{ path('app_calibre_delete', {'id': calibre.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer Le Calibre: '+ {{calibre.id}})"><i class="bi bi-trash text-danger ml-5"></i></a>
                    </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
