{% extends 'template.html.twig' %}

{% block title %}Boisson index{% endblock %}
{% block pagetitle %}Listes des Boissons{% endblock %}
{% block body %}
    

<div class="container-fluid" >
<div class="card shadow mb-4">
    <div class="card-header py-3">
<div class="card-body table-responsive">
<div class="container" >

     <div class="row">
    <table class="table table-bordered table-striped table-highlight">

<a href="{{ path('app_boisson_new') }}" class="btn btn-success mb-3">Nouvelle Boisson<i class="bi bi-plus"></i></a>
        <thead>
            <tr>
                
                <th>Designation</th>
                <th>Type</th>
                <th>Seuil</th>
                <th>action1</th>
                <th>action2</th>
            </tr>
        </thead>
        <tbody>
        {% for boisson in boissons %}
            <tr>
                
                <td>{{ boisson.designation }}</td>
                <td>{{ boisson.type }}</td>
                <td>{{ boisson.seuil }}</td>
                    <td class="text text-center">
                    <a href="{{ path('app_boisson_edit', {id : boisson.id} )}}" class="btn btn-sm btn-outline-success" ><i class="bi bi-pencil text-success ml-5"></i></a>
                    </td>
                    
                    <td class="text text-center"><a href="{{ path('app_boisson_delete', {id : boisson.id} )}}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer La Boisson: '+ {{boisson.id}})"><i class="bi bi-trash text-danger ml-5"></i></a>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
