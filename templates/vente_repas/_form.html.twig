<script>

  document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('.repas_select').addEventListener('change', function() {
        const qte = document.querySelector('.repas');
        if (this.value !== '') {
            qte.style.display = 'block';
        } else {
            qte.style.display = 'none';
        }
    });
});

  document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('.proteine_select').addEventListener('change', function() {
        const inputForArticle = document.querySelector('.proteine');
        
        if (this.value !== '') {
            inputForArticle.style.display = 'block';
        } else {
            inputForArticle.style.display = 'none';
        }
    });
});


