{% extends 'template.html.twig' %}

{% block title %}Repas index{% endblock %}
{% block pagetitle %}Liste de la vente des repas{% endblock %}
{% block body %}
    

    <div class="container-fluid" >
    <div class="card shadow mb-4">
    <div class="card-header py-3">
    <div class="card-body table-responsive">
    <div class="container" >

     <div class="row">
       <table class="table table-bordered table-striped table-highlight">
        <thead>
            <tr>
                
                <th>Accompagnement</th>
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repa in repas %}
            <tr>
                
                <td>{{ repa.accompagnement }}</td>
                
                <td>
                    <a href="{{ path('app_repas_show', {'id': repa.id}) }}">show</a>
                    <a href="{{ path('app_repas_edit', {'id': repa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_repas_new') }}">Create new</a>
{% endblock %}
