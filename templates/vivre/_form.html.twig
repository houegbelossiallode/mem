<script>
  document.addEventListener('DOMContentLoaded', function() {
      document.querySelector('.article-select').addEventListener('change', function() {
          const inputForArticle = document.querySelector('.article-input');
          if (this.value !== '') {
              inputForArticle.style.display = 'block';
          } else {
              inputForArticle.style.display = 'none';
          }
      });
  });
